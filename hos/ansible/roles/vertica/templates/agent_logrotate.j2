/opt/vertica/log/agent*.log {
    su dbadmin
    # rotate period
    {{ vertica_logrotate_period }}
    # amount of logs to keep
    rotate {{ vertica_logrotate_retention }}
    # no complaining if agent did not start yet
    missingok
    # compress log after rotation
    compress
    # rotate by copying it aside and truncating
    copytruncate
}
