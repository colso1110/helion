set -o pipefail

# This script creates a subunit file with the last tempest tests run
#
# Usage: [path]/generate-subunit.sh

# Environment variable may be overridden by the caller
export TESTR="{{ tempest_bin_dir }}/testr"
export SUBUNIT_FILE="${1}"

$TESTR last --subunit > $SUBUNIT_FILE
